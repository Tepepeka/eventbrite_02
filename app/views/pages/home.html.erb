<section class="jumbotron text-center mt-4">
  <div class="container">

  <% if admin? %>
    <h1 class="jumbotron-heading text-white">ADMIN</h1>
    <p>
      <%= link_to 'Dashboard', admin_users_path, class: "btn btn-warning my-2"%>
    </p>
  <% else %>
    <h1 class="jumbotron-heading text-white">NBA TIME</h1>
    <p class="lead text-white">Let's watch basketball together.</p>
    <p class="lead text-white">We are <%=User.all.count%>, for <%=Event.all.count%> events and <%=Attendance.all.count%> attendances.</p>
    <p>
      <%=link_to "Create event", new_event_path, class:"btn btn-success my-2"%>
      <%=link_to "All events", events_path, class:"btn btn-primary my-2"%>
    </p>
  <% end %>
  
  </div>
</section>