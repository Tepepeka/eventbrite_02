<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
        <h2 class="text-white">Users list / <%= link_to "Events list", admin_events_path %> / <%= link_to "Attendances list", admin_attendances_path %></h2>
        
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col" class="text-white">#</th>
                        <th scope="col" class="text-white">Name</th>
                        <th scope="col" class="text-white">Email</th>
                        <th scope="col" class="text-white">Events</th>
                        <th scope="col" class="text-white">Is_admin?</th>
                        <th scope="col" class="text-white">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    <% @users.sort{|a,b| b.created_at <=> a.created_at}.each do |user| %>
                        <tr>
                            <th scope="row" class="text-white"><%= link_to user.id, admin_user_path(user) %></th>
                            <td class="text-white"><%= user.name %></td>
                            <td class="text-white"><%= user.email%></td>
                            <td class="text-white"><%= user.created_events.count %></td>
                            <td class="text-white"><%= user.admin? %></td>
                            <td>
                                <%= link_to "Edit", edit_admin_user_path(user) %>
                                /
                                <%= link_to "Destroy", admin_user_path(user), data: {
                                  turbo_method: :delete,
                                  turbo_confirm: "Are you sure?"
                                } %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table> 
        </div>
        <div class="mb-2">
            <%=link_to "Create event", new_event_path, class:"btn btn-success"%>
            <%=link_to "All events", events_path, class:"btn btn-primary"%>
            <%= link_to "back", root_path, class:"btn btn-secondary" %></p>
        </div>
    </div>
  </div>
</div>