<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h2><%= link_to "Users list", admin_users_path %> / Events list / <%= link_to "Attendances list", admin_attendances_path %> </h2>
        
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Title</th>
              <th scope="col">Attendees</th>
              <th scope="col">Creator</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @events.sort{|a,b| a.creator.email <=> b.creator.email}.each do |event| %>
              <tr>
                <th scope="row"><%= link_to event.id, admin_event_path(event) %></th>
                <td><%= event.title %></td>
                <td><%= event.attendees.count %></td>
                <td><%= event.creator.email%></td>
                <td>
                  <%= link_to "Edit", edit_admin_event_path(event) %>
                  /
                  <%= link_to "Destroy", admin_event_path(event), data: {
                                  turbo_method: :delete,
                                  turbo_confirm: "Are you sure?"
                                } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="mb-2">
        <%=link_to "Create event", new_event_path, class:"btn btn-success"%>
        <%=link_to "All events", events_path, class:"btn btn-primary"%>
        <%= link_to "back", root_path, class:"btn btn-secondary" %></p>
      </div>
      
    </div>
  </div>
</div>